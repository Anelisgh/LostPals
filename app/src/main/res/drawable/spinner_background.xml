<?xml version="1.0" encoding="utf-8"?>
<!--Input-ul din filtru homepage-->

<!-- fundal pentru spinner: chenar si sageata dropdown -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="@color/stroke" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- iconita sageata din dreapta, centrat pe verticala si cu padding pe dreapta -->

    <item
        android:drawable="@drawable/baseline_keyboard_arrow_down_24"
        android:gravity="center_vertical|end"
        android:right="8dp"/>
</layer-list>