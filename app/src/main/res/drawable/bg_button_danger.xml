<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- culoarea solidă de fundal (un roz pal) -->
    <solid android:color="#FCE4EC"/>

    <!-- contur roșu subțire -->
    <stroke
        android:width="2dp"
        android:color="#D32F2F"/>

    <!-- colțuri rotunjite -->
    <corners android:radius="20dp"/>

    <!-- (opțional) padding intern -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>
</shape>
